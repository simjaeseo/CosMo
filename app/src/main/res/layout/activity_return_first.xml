<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="180dp"
    tools:context=".ReturnFirstActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="헬멧박스를\n반납하시겠습니까?"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@id/returnFirstYesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />


    <Button
        android:id="@+id/returnFirstYesButton"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:text="확인"
        android:background="@drawable/popup_yes_button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/returnFirstReportButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        />

    <Button
        android:id="@+id/returnFirstReportButton"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:text="신고"
        android:background="@drawable/popup_report_button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/returnFirstCancelButton"
        app:layout_constraintStart_toEndOf="@id/returnFirstYesButton"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        />

    <Button
        android:id="@+id/returnFirstCancelButton"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:text="취소"
        android:background="@drawable/popup_cancel_button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/returnFirstReportButton"
        app:layout_constraintTop_toBottomOf="@id/textView2"

        />


</androidx.constraintlayout.widget.ConstraintLayout>