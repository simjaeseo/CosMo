<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    tools:context=".RentPopupActivity">

    <LinearLayout
        android:id="@+id/RentPopupHelmetBackground"
        android:layout_width="250dp"
        android:layout_height="186dp"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/report_edittext_shape"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="138dp"
            android:layout_height="138dp"
            android:src="@drawable/ic_logo"
             />

    </LinearLayout>

    <Button
        android:id="@+id/RentPopupYesButton"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:text="확인"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:background="@drawable/popup_yes_button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/RentPopupCancelButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RentPopupHelmetBackground"
        />

    <Button
        android:id="@+id/RentPopupCancelButton"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:text="취소"
        app:backgroundTint="@null"
        android:textColor="#00C6C1"
        android:background="@drawable/popup_cancel_button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/RentPopupYesButton"
        app:layout_constraintTop_toBottomOf="@id/RentPopupHelmetBackground"

        />

</androidx.constraintlayout.widget.ConstraintLayout>