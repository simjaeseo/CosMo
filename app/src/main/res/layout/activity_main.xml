<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_drawer"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_navi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu" />

    <Button
        android:id="@+id/boxOpenButton"
        android:layout_width="132dp"
        android:layout_height="177dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#A5A1A1"
        android:enabled="false"
        android:gravity="right|bottom"
        android:text="헬멧박스open"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/returnButton"
        app:layout_constraintEnd_toStartOf="@id/backDetectionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backDetectionButton"
        android:layout_width="132dp"
        android:layout_height="177dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#A5A1A1"
        android:enabled="false"
        android:gravity="right|bottom"
        android:text="후방감지on"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/rentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boxOpenButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="132dp"
        android:layout_height="177dp"
        android:backgroundTint="#A5A1A1"
        android:enabled="false"
        android:gravity="right|bottom"
        android:text="헬멧박스반납하기"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rentButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxOpenButton" />

    <Button
        android:id="@+id/rentButton"
        android:layout_width="132dp"
        android:layout_height="177dp"
        android:backgroundTint="#BFDCFE"
        android:gravity="right|bottom"
        android:onClick="startBarcodeReader"
        android:text="대여하기"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/returnButton"
        app:layout_constraintTop_toBottomOf="@id/backDetectionButton" />
</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navi_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navi_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>