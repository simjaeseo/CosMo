<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitialActivity">


    <Button
        android:id="@+id/boxOpenButton"
        android:layout_width="132dp"
        android:layout_height="177dp"
        android:layout_marginTop="130dp"
        android:enabled="false"
        android:gravity="right|bottom"
        android:text="헬멧박스open"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/returnButton"
        app:layout_constraintEnd_toStartOf="@id/backDetectionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backDetectionButton"
        android:layout_width="132dp"
        android:layout_height="177dp"
        android:layout_marginTop="130dp"
        android:enabled="false"
        android:gravity="right|bottom"
        android:text="후방감지on"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/rentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boxOpenButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="132dp"
        android:layout_height="177dp"
        android:enabled="false"
        android:gravity="right|bottom"
        android:text="헬멧박스반납하기"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rentButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxOpenButton" />

    <Button
        android:id="@+id/rentButton"
        android:layout_width="132dp"
        android:layout_height="177dp"
        android:gravity="right|bottom"
        android:text="대여하기"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/returnButton"
        app:layout_constraintTop_toBottomOf="@id/backDetectionButton" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#BFDCFE" >

            <TextureView
                android:id="@+id/textureView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#BFDCFE" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>