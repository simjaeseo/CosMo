<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drawer1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_image"
    tools:context=".MainActiveActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_navi1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_new_menu" />

        <Button
            android:id="@+id/boxOpenButton"
            android:layout_width="129dp"
            android:layout_height="48dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/main_button_shape"
            android:enabled="true"
            android:gravity="center"
            android:text="open"
            android:textColor="#00C6C1"
            android:textSize="20dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@id/returnButton"
            app:layout_constraintEnd_toStartOf="@id/backDetectionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/BoxOpenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="헬멧 박스를 열고 싶을 땐!"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/returnButton"
            app:layout_constraintEnd_toStartOf="@+id/backDetectionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boxOpenButton" />

        <Button
            android:id="@+id/backDetectionButton"
            android:layout_width="129dp"
            android:layout_height="48dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/main_button_shape"

            android:enabled="true"
            android:gravity="center"
            android:text="off"
            android:textColor="#00C6C1"
            android:textSize="20dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@id/returnButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boxOpenButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/BackDetectionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="후방감지를 사용하고 싶다면?"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/returnButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boxOpenButton"
            app:layout_constraintTop_toBottomOf="@+id/backDetectionButton" />

        <Button
            android:id="@+id/returnButton"
            android:layout_width="129dp"
            android:layout_height="48dp"
            android:background="@drawable/main_button_shape"
            android:enabled="true"
            android:gravity="center"
            android:text="Return"
            android:textColor="#00C6C1"
            android:textSize="20dp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boxOpenButton" />

        <TextView
            android:id="@+id/returnTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="헬멧박스를 다 사용했다면?"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/returnButton" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/naviview1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navi_menu1" />

</androidx.drawerlayout.widget.DrawerLayout>

