<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="180dp"
    tools:context=".ReturnLoadCheckActivity">

    <!--더이상 건드리지말기-->
    <TextView
        android:id="@+id/loadCheckTextView"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="헬멧박스에 두고가신 짐은 없나요?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/loadCheckYesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/loadCheckYesButton"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:background="@drawable/popup_yes_button_shape"
        android:text="확인"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/loadCheckCancelButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadCheckTextView" />

    <Button
        android:id="@+id/loadCheckCancelButton"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:textColor="#00C6C1"
        android:background="@drawable/popup_cancel_button_shape"
        android:text="취소"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/loadCheckYesButton"
        app:layout_constraintTop_toBottomOf="@id/loadCheckTextView"

        />


</androidx.constraintlayout.widget.ConstraintLayout>