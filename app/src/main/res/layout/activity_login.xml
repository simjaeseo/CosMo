<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_image"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/loginLogoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:text="COSMO"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loginIdTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginRight="230dp"

        android:text="아이디"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/loginIdEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginLogoTextView" />

    <EditText
        android:id="@+id/loginIdEditText"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/id_pw_edittext_shape"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/loginPasswordTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginIdTextView" />


    <TextView
        android:id="@+id/loginPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="210dp"
        android:text="비밀번호"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/loginPasswordEditView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginIdEditText" />

    <EditText
        android:id="@+id/loginPasswordEditView"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:paddingLeft="10dp"

        android:background="@drawable/id_pw_edittext_shape"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/loginLoginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPasswordTextView" />

    <Button
        android:id="@+id/loginLoginButton"
        android:layout_width="140dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/popup_yes_button_shape"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loginSignupButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPasswordEditView" />

    <Button
        android:id="@+id/loginSignupButton"
        android:layout_width="140dp"
        android:layout_height="49dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/popup_cancel_button_shape"
        android:text="회원가입"
        android:textColor="#00C6C1"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loginLoginButton"
        app:layout_constraintTop_toBottomOf="@+id/loginPasswordEditView" />


    <!-- app:srcCompat="@drawable/로고"-->

</androidx.constraintlayout.widget.ConstraintLayout>