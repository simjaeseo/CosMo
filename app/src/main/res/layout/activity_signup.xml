<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="109dp"
        android:layout_height="105dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@+id/signup_id_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signup_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="230dp"
        android:text="아이디"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_id_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/popup_cancel_button_shape"
        android:text="중복 확인"
        android:textColor="#00C6C1"
        android:textSize="11dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/signup_id_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signup_id_textview"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/signup_id_EditText"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/id_pw_edittext_shape"
        android:inputType="text"
        android:paddingLeft="10dp"

        app:layout_constraintBottom_toTopOf="@+id/signup_name_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_id_textview" />

    <TextView
        android:id="@+id/signup_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="250dp"
        android:text="이름"
        android:textSize="20dp"

        app:layout_constraintBottom_toTopOf="@+id/signup_name_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_id_EditText" />


    <EditText
        android:id="@+id/signup_name_EditText"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/id_pw_edittext_shape"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"

        app:layout_constraintBottom_toTopOf="@+id/signup_pw_TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_name_textview" />


    <TextView
        android:id="@+id/signup_pw_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="210dp"

        android:text="비밀번호"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_pw_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_name_EditText" />


    <EditText
        android:id="@+id/signup_pw_EditText"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/id_pw_edittext_shape"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingLeft="10dp"

        app:layout_constraintBottom_toTopOf="@+id/signup_pwcheck_TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pw_TextView" />

    <TextView
        android:id="@+id/signup_pwcheck_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="170dp"
        android:text="비밀번호 확인"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_pwcheck_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pw_EditText" />

    <EditText
        android:id="@+id/signup_pwcheck_EditText"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/id_pw_edittext_shape"
        android:inputType="textPassword"
        android:paddingLeft="10dp"

        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_done_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pwcheck_TextView" />

    <Button
        android:id="@+id/signup_done_button"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/popup_yes_button_shape"
        android:text="가입완료"
        android:textColor="#FFFFFF"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signup_cancle_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pwcheck_EditText" />

    <Button
        android:id="@+id/signup_cancle_button"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/popup_cancel_button_shape"
        android:text="취소"
        android:textColor="#00C6C1"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signup_done_button"
        app:layout_constraintTop_toBottomOf="@+id/signup_pwcheck_EditText" />


</androidx.constraintlayout.widget.ConstraintLayout>