<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="455dp"
    tools:context=".QuestionsReportActivity">


    <TextView
        android:id="@+id/questions_report_TextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="분실신고 및 건의함"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/questions_reportContent_EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/questions_reportContent_EditText"
        android:layout_width="205dp"
        android:layout_height="240dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/report_edittext_shape"
        android:gravity="left|top"
        android:hint="건의 사항을 적어주세요."
        android:inputType="textImeMultiLine"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="#AA9D9D"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questions_report_TextView" />

    <Button
        android:id="@+id/questions_returnreport_button"
        android:layout_width="95dp"
        android:layout_height="41dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#BFDCFE"
        android:text="신고"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/questions_cancle_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questions_reportContent_EditText" />

    <Button
        android:id="@+id/questions_cancle_button"
        android:layout_width="95dp"
        android:layout_height="41dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#E3BFBF"
        android:text="취소"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/questions_returnreport_button"
        app:layout_constraintTop_toBottomOf="@id/questions_reportContent_EditText"
 />

</androidx.constraintlayout.widget.ConstraintLayout>