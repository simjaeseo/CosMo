<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    tools:context=".Questions">


    <Button
        android:id="@+id/questions_service_button"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:backgroundTint="#BFDCFE"
        android:includeFontPadding="true"
        android:text="서비스 이용 관련 문의"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/questions_report_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questions_Question_textview"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/questions_report_button"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#BFDCFE"
        android:includeFontPadding="true"
        android:text="분실, 고장 신고"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questions_Question_textview"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/questions_Question_textview"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:text="문의사항"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>